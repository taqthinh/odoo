
<odoo>
	<record id="module_product_category" model="ir.module.category">
		<field name="name">Manage product</field>
		<field name="sequence">10</field>
	</record>

	<record id="module_product_category_user"
		model="ir.module.category">
		<field name="name">Manage product</field>
		<field name="parent_id" ref="module_product_category" />
		<field name="description">Helps you handle Product Manage application</field>
		<field name="sequence">10</field>
	</record>

	<record id="viin_product_group_user" model="res.groups">
		<field name="name">User</field>
		<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
		<field name="category_id" ref="module_product_category_user" />
		<field name="comment">Users belong to this group can view data in Product Manage application
		</field>
	</record>

	<record id="viin_product_group_admin" model="res.groups">
		<field name="name">Administrator</field>
		<field name="implied_ids"
			eval="[(4, ref('viin_product_group_user'))]" />
		<field name="category_id" ref="module_product_category_user" />
		<field name="users"
			eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]" />
		<field name="comment">Users belong to this group can control Product Manage
			application
		</field>
	</record>

	<record id="viin_product_rule_user" model="ir.rule">
		<field name="name">Product: Only see the product available</field>
		<field name="model_id" ref="model_viin_product" />
		<field name="groups"
			eval="[(4, ref('viin_product.viin_product_group_user'))]" />
		<field name="domain_force">[('sold_out', '=', False)]</field>
	</record>
	<record id="viin_product_rule_admin" model="ir.rule">
		<field name="name">Product: See all product</field>
		<field name="model_id" ref="model_viin_product" />
		<field name="groups"
			eval="[(4, ref('viin_product.viin_product_group_admin'))]" />
		<field name="domain_force">[(1, '=', 1)]</field>
	</record>

</odoo>