<?xml version="1.0" encoding="utf-8"?>

<odoo>

	<record id="viin_customer_view_form" model="ir.ui.view">
		<field name="name">viin.customer.form</field>
		<field name="model">viin.customer</field>
		<field name="arch" type="xml">
			<form string="Customer Form">
				<header>
					<button name="change_to_new" type="object" string="New" />
					<button name="change_to_vip" type="object" string="Vip" />
					<button name="change_to_off" type="object" string="Off" />
					<field name="state" widget="statusbar" />
				</header>
				<sheet>
					<group>
						<group>
							<field name="name" />
							<field name="phone" />

						</group>
						<group>
							<field name="image" widget="image" class="oe_avatar"
								options="{'preview_image': 'image'}" />
						</group>
					</group>
					<group>
						<field name="address" />
						<field name="note" />
					</group>
				</sheet>
			</form>
		</field>
	</record>


	<record id="viin_customer_view_tree" model="ir.ui.view">
		<field name="name">viin.customer.tree</field>
		<field name="model">viin.customer</field>
		<field name="arch" type="xml">
			<tree string="customer Tree">
				<field name="name" />
				<field name="phone" />
				<field name="address" />
			</tree>
		</field>
	</record>

</odoo>