<?xml version="1.0" encoding="utf-8"?>

<odoo>

	<record id="viin_product_attribute_view_tree" model="ir.ui.view">
		<field name="name">viin.product.attribute.tree</field>
		<field name="model">viin.product.attribute</field>
		<field name="arch" type="xml">
			<tree string="Attribute Tree">
				<field name="name" />
				<field name="value_ids" widget="many2many_tags"
					options="{'no_create_edit': True}" />
			</tree>
		</field>
	</record>

	<record id="viin_product_attribute_view_form" model="ir.ui.view">
		<field name="name">viin.product.attribute.form</field>
		<field name="model">viin.product.attribute</field>
		<field name="arch" type="xml">
			<form string="Attribute Form">
				<header>

				</header>
				<sheet>
					<group>
						<field name="name" />
					</group>
					<group>
						<field name="value_ids" />
					</group>

				</sheet>
			</form>
		</field>
	</record>

</odoo>